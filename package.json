{
  "name": "study-note",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/xeasony/study-note.git",
  "author": "Le Do Thai Binh <xeasony@gmail.com>",
  "license": "MIT",
  "engines": {
    "npm": ">=4",
    "node": ">=7"
  },
  "scripts": {
    "clean": "rimraf ./build",
    "lint": "eslint server src webpack",
    "lint:fix": "npm run lint -- --fix",
    "test": "NODE_ENV=test jest",
    "test:cov": "rimraf ./coverage && npm run test -- --coverage",
    "build": "npm run clean && webpack --config webpack/webpack.prod.js",
    "dev": "node server --use-webpack",
    "start": "npm run build && node server"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/mock/assets.js",
      "\\.(css|scss)$": "<rootDir>/src/tests/mock/assets.js"
    }
  },
  "dependencies": {
    "babel-register": "^6.24.0",
    "bem-cn": "^2.1.3",
    "chalk": "^2.3.0",
    "compression": "^1.6.2",
    "express": "^4.15.0",
    "font-awesome": "^4.7.0",
    "foundation-sites": "^6.4.4-rc1",
    "jsonfile": "^4.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.0.0-beta.7",
    "serve-favicon": "^2.4.1",
    "yargs": "^10.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "jest": "^22.1.2",
    "node-sass": "^4.5.0",
    "react-addons-test-utils": "^15.4.2",
    "redbox-react": "^1.3.4",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-merge": "^4.1.0"
  }
}
